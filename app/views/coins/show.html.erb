<form>  
<fieldset disabled>
      <div class="form-group">
      <%= label_tag nil,  @coin.class.human_attribute_name(:description) %>
      <%= text_field_tag nil, @coin.description, class:"form-control"%>
    </div>
    
    <div class="form-group">
      <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
      <%= text_field_tag nil, @coin.acronym, class:"form-control"%>
    </div>
    
    <div>
      <%= label_tag nil, @coin.class.human_attribute_name(:url_image) %>
      </br>
      <%= image_tag @coin.url_image, size:"60x42"%>
    </div>
    
    <div class="form-group">
      <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
      <%= text_field_tag nil, @coin.mining_type.description, class:"form-control"%>
    </div>
    
  </fieldset>
</form>

<%= link_to t('links.edit'), edit_coin_path(@coin), type:"button", class:"btn btn-primary" %>
<%= link_to t('links.back'), coins_path, type:"button", class:"btn btn-primary" %>
